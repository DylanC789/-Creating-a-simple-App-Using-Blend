<Window x:Class="simpleapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simpleapp"
        mc:Ignorable="d"
        Title="Simple Application" Height="300" Width="400">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF0080FF" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label x:Name="TextLabel" Content="" HorizontalAlignment="Center" Height="102" VerticalAlignment="Top" Width="330" FontFamily="Comic Sans MS" FontSize="36" Foreground="#FF4A8CFF" Margin="0,89,0,0"/>
        <Button x:Name="DisplayTextButton" Content="Display Text" Margin="150,196,141,28" IsCancel="True" Click="DisplayText"/>

    </Grid>
</Window>
